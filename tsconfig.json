{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["es6"],
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "./build",
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": ["./boilerplate", "./templates"]
}
